{
  "manifest_version": 3,
  "name": "CV Tracker - Job Application Helper",
  "version": "1.0.0",
  "description": "Automatically capture job details from LinkedIn and save to your CV Tracker",
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://your-cv-tracker-domain.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CV Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles.css"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}