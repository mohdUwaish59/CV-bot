{
  "manifest_version": 3,
  "name": "CV Tracker - Job Application Helper",
  "version": "1.0.0",
  "description": "Automatically capture job details from LinkedIn and save to your CV Tracker",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://cv-bot-4-you.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CV Tracker"
  }
}